@using GestaoDeEquipamentos.Dominio.ModuloEquipamento

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Cadastro de Chamados";
}
﻿

@model List<Equipamento>


        <div class="row justify-content-center">
            <form class="col-6" action="/Chamado/Cadastrar" method="post">
                <div class="mb-3">
                    <label for="Titulo" class="form-label">Titulo:</label>
                    <input class="form-control" name="Titulo">
                </div>

                <div class="mb-3">
                    <label for="Descricao" class="form-label">Descrição:</label>
                    <input class="form-control" name="Descricao">
                </div>

                <div class="mb-3">
                    <label for="DataAbertura" class="form-label">Data de Abertura:</label>
                    <input class="form-control" name="DataAbertura">
                </div>

                <div class="mb-3">
                    <label for="Equipamento" class="form-label">Equipamento:</label>
                    <select class="form-select" name="equipamentoId">
                        <option selected>Selectione uma opção</option>
                        @foreach (Equipamento e in Model)
                        {
                            <option value="@e.Id">@e.Nome</option>
                        }
                    </select>
                </div>
               
                <div class="d-flex gap-2 justify-content-end">
                    <a href="/Equipamento" class="btn btn-outline-primary px-5 ">Voltar</a>
                    <button class="btn btn-primary px-5">Gravar</button>
                </div>
            </form>
        </div>
    