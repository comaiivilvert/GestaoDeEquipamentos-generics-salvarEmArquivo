@using GestaoDeEquipamento.WebApp.Models
@using GestaoDeEquipamentos.Dominio.ModuloEquipamento
@using GestaoDeEquipamentos.Dominio.ModuloFabricante


@{
    Layout = "_Layout";
    ViewBag.Titulo = "Exclusão de Equipamentos";
}

@model ExcluirEquipamentoViewModel;

        <div class="row justify-content-center">
            <form class="col-6" action="/Equipamento/ExcluirConfirmado/@Model.Id" method="post">
                <div class="mb-5">
                    <p>Deseja realmente excluir o registro "@Model.Nome"?</p>
                </div>
                
                <div class="dflex gap-2 justify-content-end">
                    <a href="/Equipamento" class="btn btn-outline-danger px-5">Voltar</a>
                    <button class="btn btn-danger px-5">Confirmar</button>
                </div>
            </form>
        </div>