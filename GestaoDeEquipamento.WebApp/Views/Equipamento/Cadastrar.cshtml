@using GestaoDeEquipamentos.Dominio.ModuloFabricante 
@model List<Fabricante>

    @{
        List<Fabricante> fabricantes = ViewBag.Fabricantes;
    }
﻿
<html>
<head>
    @* Bootstrap *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

    @* Bootstrap Icons *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <title>Cadastro de Equipamento | Gestão de Equipamentos</title>
</head>
<body data-bs-theme="dark">
    @* Barra de Navegação / Navbar *@
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="#">Gestão de Equipamentos</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="btn btn-primary" href="/Fabricante">Fabricantes</a>
                    </li>
                    <li class="nav-item mx-2">
                        <a class="btn btn-primary" href="/Equipamento">Equipamentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary" href="/Chamado">Chamados</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    @* Cabeçalho com o Título da Página Atual *@
    <header class="container my-4">
        <h1>Cadastro de Equipamento</h1>
    </header>

    <hr />

    @* Conteúdo Principal da Página *@
    <main class="container my-4">
        <div class="row justify-content-center">
            <form class="col-6" action="/Equipamento/Cadastrar" method="post">
                <div class="mb-3">
                    <label for="Nome" class="form-label">Nome</label>
                    <input class="form-control" name="Nome">
                </div>

                <div class="mb-3">
                    <label for="PrecoAquisicao" class="form-label">Preço de Aquisição</label>
                    <input class="form-control" name="PrecoAquisicao">
                </div>

                <div class="mb-3">
                    <label for="NumeroSerie" class="form-label">Numero de Série:</label>
                    <input class="form-control" name="NumeroSerie">
                </div>

                <div class="mb-3">
                    <label for="Fabricante" class="form-label">Fabricante:</label>
                    <select class="form-select" name="fabricanteId" aria-label="Fabricantes">
                    <option selected>Selectione uma opção</option>
                    @foreach (Fabricante f in fabricantes)
                    {
                        <option value="@f.Id">@f.Nome</option>
                    }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="DataFabricacao" class="form-label">Data de Fabricação</label>
                    <input class="form-control" type="date" name="DataFabricacao">
                </div>

                <div class="d-flex gap-2 justify-content-end">
                    <a href="/Equipamento" class="btn btn-outline-primary px-5 ">Voltar</a>
                    <button class="btn btn-primary px-5">Gravar</button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>
