@using GestaoDeEquipamentos.Dominio.ModuloFabricante 

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Cadastro de Equipamentos";
}

@model List<Fabricante>

    @{
        List<Fabricante> fabricantes = ViewBag.Fabricantes;
    }
﻿

        <div class="row justify-content-center">
            <form class="col-6" action="/Equipamento/Cadastrar" method="post">
                <div class="mb-3">
                    <label for="Nome" class="form-label">Nome</label>
                    <input class="form-control" name="Nome">
                </div>

                <div class="mb-3">
                    <label for="PrecoAquisicao" class="form-label">Preço de Aquisição</label>
                    <input class="form-control" name="PrecoAquisicao">
                </div>

                <div class="mb-3">
                    <label for="NumeroSerie" class="form-label">Numero de Série:</label>
                    <input class="form-control" name="NumeroSerie">
                </div>

                <div class="mb-3">
                    <label for="Fabricante" class="form-label">Fabricante:</label>
                    <select class="form-select" name="fabricanteId" aria-label="Fabricantes">
                    <option selected>Selectione uma opção</option>
                    @foreach (Fabricante f in fabricantes)
                    {
                        <option value="@f.Id">@f.Nome</option>
                    }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="DataFabricacao" class="form-label">Data de Fabricação</label>
                    <input class="form-control" type="date" name="DataFabricacao">
                </div>

                <div class="d-flex gap-2 justify-content-end">
                    <a href="/Equipamento" class="btn btn-outline-primary px-5 ">Voltar</a>
                    <button class="btn btn-primary px-5">Gravar</button>
                </div>
            </form>
        </div>
   